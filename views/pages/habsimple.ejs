<!DOCTYPE html>
<html>

<head>
    <% include ../partials/header.ejs %>
        <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
        <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
        <script>
            $(function () {
                $(".datepicker").datepicker();
            });
        </script>
</head>

<body>
    <!-- TODO (do partials?) -->

    <% include ../partials/nav.ejs %>

        <div style="background-color: #e3f2fd; width: 100%;">
            <div class="container" style="padding: 15px;">
                <div class="row">
                    <div class="col">
                        <img src="img/singleHabit.jpg" style="height: 100%; width: 100%; object-fit: contain">
                    </div>
                    <div class="col">
                        <% results.forEach(function(r) { %>
                            <h1>
                                <%= r.nombre_servicio %>
                            </h1>
                            <p>
                                <%= r.descripcion %>.
                            </p>
                            <% }); %>
                                <form action="https://bitpay.com/checkout" method="post">
                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="habSimpleName">Nombre:</label>
                                                <input type="text" class="form-control" id="habSimpleName" placeholder="Nombre">
                                            </div>
                                            <div class="form-group">
                                                <label for="habSimpleMail">Email:</label>
                                                <input type="email" class="form-control" id="habSimpleMail" placeholder="Email">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="habSimpleFechaIn">Llegada:</label>
                                                <input type="text" class="form-control datepicker" id="habSimpleFechaIn" placeholder="Fecha de llegada">
                                            </div>
                                            <div class="form-group">
                                                <label for="habSimpleFechaOut">Salida:</label>
                                                <input type="text" class="form-control datepicker" id="habSimpleFechaOut" placeholder="Fecha de salida">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <p>Paga en Bitcoin haciendo clic en el botón o escanea el código QR con el móvil:</p>
                                            <input type="hidden" name="action" value="cartAdd" />
                                            <input type="hidden" name="data" value="ZnVWEByKYNanaCv3JAUHY" />
                                            <button type="submit" class="btn btn-warning">
                                                Paga con BTC
                                            </button>
                                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalHabSimple">
                                                Código QR
                                            </button>
                                        </div>
                                    </div>
                                </form>
                    </div>
                </div>

            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="modalHabSimple" tabindex="-1" role="dialog" aria-labelledby="QR-habitacion-simple" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalHabSimpleLabel">QR Habitación Simple</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <img src="qr/habSimple.png" style="height: 100%; width: 100%; object-fit: contain">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
                    </div>
                </div>
            </div>
        </div>

</body>

</html>